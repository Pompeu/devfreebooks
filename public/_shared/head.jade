meta(name="twitter:image" content="#{root_url[environment]}assets/images/devfreebooks-thumb.png")
link(rel="icon" href="#{root_url[environment]}favicon.ico" type="image/x-icon")
link(rel="stylesheet" href="#{root_url[environment]}assets/css/main.css")
